elsif pica_match('028C4B',"win")
      pica_map('028Cad','author_introduction.$append',join:', ',pluck:1)
      pica_map('028CP','author_introduction.$append',join:', ',pluck:1)
      pica_map('028C8','author_introduction.$append',pluck:1)
