# ---------- abstracts (PICA3 4207), (by Johann Rolschewski)
if pica_match(047I,"\(.*\)$")
   pica_map(047Ia,tmp)
   parse_text(tmp,"(?<abstract>.*\.)\s\((?<abstractor>.*)\)")
   move_field(tmp.abstract,abstract)
   move_field(tmp.abstractor,abstractor)
   remove_field(tmp)
else
   pica_map(047Ia,abstract)
end

